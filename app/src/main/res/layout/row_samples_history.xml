<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_sr_no"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@android:drawable/status_bar_item_background"
            android:drawableBottom="@drawable/bg_border"
            android:gravity="center"
            android:padding="2dp"
            android:text="Sr.No"
            android:textAlignment="gravity"
            android:textColor="@color/tv_color" />

        <TextView
            android:id="@+id/tv_visit_date"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@android:drawable/status_bar_item_background"
            android:gravity="center"
            android:padding="2dp"
            android:text="2022-22-22"
            android:textAlignment="gravity"
            android:textColor="@color/tv_color" />

        <TextView
            android:id="@+id/tv_retailer_name"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@android:drawable/status_bar_item_background"
            android:gravity="center"
            android:padding="2dp"
            android:text="Shop Name"
            android:textAlignment="gravity"
            android:textColor="@color/tv_color" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@android:drawable/status_bar_item_background"
            android:gravity="center"
            android:padding="2dp"
            android:text="Address"
            android:textAlignment="gravity"
            android:textColor="@color/tv_color" />

        <TextView
            android:id="@+id/tv_contact_person"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="Contact No"
            android:textAlignment="gravity"
            android:textColor="@color/tv_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>