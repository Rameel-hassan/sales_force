            android:text="Total Sample Deliver"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/total_sample_delivery"
            app:layout_constraintEnd_toEndOf="@+id/total_sample_delivery"
