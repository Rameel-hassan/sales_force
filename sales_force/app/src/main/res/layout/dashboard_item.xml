            android:fontFamily="@font/century_gothic"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Total Sample Demand"
            app:layout_constraintBottom_toBottomOf="@+id/total_sample_demand"
            app:layout_constraintEnd_toEndOf="@+id/total_sample_demand"
            app:layout_constraintStart_toStartOf="@+id/total_sample_demand"
            app:layout_constraintTop_toBottomOf="@+id/imageView_task"/>

        <LinearLayout
