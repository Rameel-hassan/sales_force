            android:layout_margin="70dp"
            android:background="@drawable/roundededge_shape"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/total_final_visit"
            app:layout_constraintStart_toStartOf="@+id/total_final_visit"
            app:layout_constraintTop_toBottomOf="@+id/total_final_visit">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/total_sample_delivery"
            app:layout_constraintEnd_toEndOf="@+id/total_sample_delivery"
            app:layout_constraintStart_toStartOf="@+id/total_sample_delivery"
            app:layout_constraintTop_toTopOf="@+id/total_sample_delivery" />

        <ImageView
