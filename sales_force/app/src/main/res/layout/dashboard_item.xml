<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/my_visits"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="70dp"
            android:background="@drawable/roundededge_shape"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/my_visits"
            app:layout_constraintEnd_toEndOf="@+id/my_visits"
            app:layout_constraintStart_toStartOf="@+id/my_visits"
            app:layout_constraintTop_toTopOf="@+id/my_visits" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/my_visits"
            app:layout_constraintEnd_toEndOf="@+id/my_visits"
            app:layout_constraintStart_toStartOf="@+id/my_visits"
            app:layout_constraintTop_toTopOf="@+id/my_visits"/>


        <TextView
            android:id="@+id/groupsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/century_gothic"
            android:text="Visits"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/my_visits"
            app:layout_constraintEnd_toEndOf="@+id/my_visits"
            app:layout_constraintStart_toStartOf="@+id/my_visits"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        </TextView>


        <LinearLayout
            android:id="@+id/total_sample_demand"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="70dp"
            android:background="@drawable/roundededge_shape"
            android:orientation="horizontal"

            app:layout_constraintEnd_toEndOf="@+id/my_visits"
            app:layout_constraintStart_toStartOf="@+id/my_visits"
            app:layout_constraintTop_toBottomOf="@+id/my_visits">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/total_sample_demand"
            app:layout_constraintEnd_toEndOf="@+id/total_sample_demand"
            app:layout_constraintStart_toStartOf="@+id/total_sample_demand"
            app:layout_constraintTop_toTopOf="@+id/total_sample_demand" />

        <ImageView
            android:id="@+id/imageviewtask2"
